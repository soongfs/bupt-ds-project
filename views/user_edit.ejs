        // æŸ¥çœ‹å®Œæ•´å¯¹è¯
        function viewConversation(userId) {
            window.location.href = `/messages/chat/${userId}`;
        }

        // å›å¤æ¶ˆæ¯
        function replyMessage(userId) {
            window.location.href = `/messages/new/${userId}`;
